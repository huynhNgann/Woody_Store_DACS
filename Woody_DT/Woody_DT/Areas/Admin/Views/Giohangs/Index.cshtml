@model IEnumerable<Model.EF.Giohang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Danh sách các đơn hàng</h1>

            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                  
                </div>
                <div class="card-body">

                    <a class="btn btn-primary" href="/Admin/Giohangs/Create">Thêm mới</a>
                    <table class="table">
                       
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Createdate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CustomerID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShipName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShipMobile)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShipAdrress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShipEmail)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Createdate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShipName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShipMobile)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShipAdrress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShipEmail)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
            </div>
        <!-- /.container-fluid -->
    </div>
</div>
