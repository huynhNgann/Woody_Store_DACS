@model List<Woody_DT.Models.CartItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

@section jsCart{
<script src="~/Asset/User/script/Controller/cartController.js"></script>
    }
<section class="myAcc myAcc2">
    <div class="container">
        <div class="row">
            <div class="col-md-2">
            </div>
            
            <div class="col-md-8">
                <div class="content">
                    <div class="section group">
                        @if (Model.Count > 0)
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <td>Mã SP</td>
                                        <td>Tên SP</td>
                                        <td>Ảnh SP</td>
                                        <td>Số lượng</td>
                                        <td>Đơn giá</td>
                                        <td>Thành tiền</td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Product.ID</td>
                                            <td>@item.Product.Name</td>
                                            <td><img src="@item.Product.Image" width="100" /></td>
                                            <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                                            <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                                            <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                                            <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Xoá</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                            <button id="btnContinue" class="btn btn-primary">Tiếp tục mua hàng</button>
                            <button id="btnUpdate" class="btn btn-success">Cập nhật giỏ hàng</button>
                            <button id="btnDeleteAll" class="btn btn-danger">Xoá giỏ hàng</button>
                            <button id="btnPayment" class="btn btn-check-out">Thanh toán</button>
                        }
                        else
                        {
                            <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
                        }

                    </div>
                </div>
 </div>
</div>
</div>
</section>